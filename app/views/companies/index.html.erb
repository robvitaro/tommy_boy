<div class="d-flex justify-content-between">
  <div>
    <h1>Companies</h1>
  </div>
  <div>
    <%= link_to "New company", new_company_path, class: 'btn btn-primary' %>
  </div>
</div>


<div id="companies">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= link_to "Show this company", company %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
