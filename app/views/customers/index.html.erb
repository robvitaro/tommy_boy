<div class="d-flex justify-content-between">
  <div>
    <h1>Customers</h1>
  </div>
  <div>
    <%= link_to "New customer", new_customer_path, class: 'btn btn-primary' %>
  </div>
</div>


<div id="customers">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= link_to customer.name, customer %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
