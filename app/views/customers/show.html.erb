<%= render @customer %>

<div>
  <%= link_to "Edit this customer", edit_customer_path(@customer), class: 'btn btn-primary me-2' %>
  <%= link_to "Back to customers", customers_path, class: 'btn btn-secondary' %>
  <%= button_to "Destroy this customer", @customer, method: :delete, class: 'btn btn-danger mt-2', form: {data: {turbo_confirm: 'Are you sure?'}} %>
</div>
